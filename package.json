{
  "name": "blocks",
  "private": true,
  "description": "A set of building blocks for Typescript projects.",
  "scripts": {
    "check": "biome check .",
    "fix": "biome check --write .",
    "pre-commit": "biome check --write --no-errors-on-unmatched --colors=off",
    "ci": "biome ci .",
    "version": "changeset version && bun fix",
    "publish": "changeset publish"
  },
  "keywords": ["typescript", "monorepo", "bun"],
  "author": "Alex Grover <hello@alexgrover.me> (https://alexgrover.me)",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.7",
    "lefthook": "^1.13.1"
  },
  "workspaces": ["packages/*"]
}
