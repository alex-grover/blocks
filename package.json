{
  "name": "blocks",
  "description": "A set of building blocks for Typescript projects.",
  "author": "Alex Grover <hello@alexgrover.me> (https://alexgrover.me)",
  "license": "ISC",
  "keywords": [
    "typescript",
    "monorepo",
    "bun"
  ],
  "private": true,
  "scripts": {
    "format": "prettier --cache",
    "check:format": "bun run format --check .",
    "fix:format": "bun run format --write .",
    "styles": "stylelint --cache --cache-location node_modules/.cache",
    "check:styles": "bun run styles ./**/*.css",
    "fix:styles": "bun run check:styles --fix",
    "version": "changeset version && bun fix:format",
    "publish": "changeset publish"
  },
  "devDependencies": {
    "@alex-grover/prettier-config": "workspace:*",
    "@alex-grover/stylelint-config": "workspace:^",
    "@changesets/cli": "^2.29.7",
    "lefthook": "^1.13.1",
    "prettier": "3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-standard": "^39.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@alex-grover/prettier-config",
  "stylelint": {
    "extends": "@alex-grover/stylelint-config"
  }
}
